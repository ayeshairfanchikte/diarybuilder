<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/logo_welcomescreen"
            android:id="@+id/logo_with_text"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_width="320dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_marginTop="15dp"
            android:layout_below="@id/logo_with_text"
            android:text="Customize your own diaries!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text2"
            android:layout_below="@id/text1"
            android:text="GET STARTED NOW!"
            android:textStyle="bold"
            android:textColor="#fcc210"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:layout_centerInParent="true"
            android:id="@+id/signin"
            android:text="LOGIN"
            android:textColor="#eeeeee"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#fcc210"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="16dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/signup"
            android:layout_below="@id/signin"
            android:text="SIGNUP"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:textColor="#fcc210"
            android:layout_marginTop="8dp"
            android:backgroundTint="#ffffff"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="16dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>